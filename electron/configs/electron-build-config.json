{
    "appId": "com.codewhilenerd.codebook",
    "productName": "CodeBook",
    "asar": true,
    "compression": "normal",
    "artifactName": "${productName}-${version}.${ext}",
    "files": [
        "!src/*",
        "!test/*",
        "!node_modules/*",
        "!configs/*",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "directories": {
        "buildResources": "build/icon.*",
        "output": "../builds/${version}/"
    },
    "mac": {
        "category": "public.app-category.developer-tools"
    }
}